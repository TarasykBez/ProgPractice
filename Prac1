#include <stdio.h>
// Функція для пошуку елементу в масиві
int find_element(int arr[], int n, int x) {
    int i;
    for (i = 0; i < n; i++) {
        if (arr[i] == x) {
            return i; // Повертаємо індекс елементу
        }
    }
    return -1; // Якщо елемент не знайдено, повертаємо -1
}

int main() {
    int n, x, i;
    printf("Введіть кількість елементів у масиві: ");
    scanf("%d", &n);
    int arr[n];
    printf("Введіть елементи масиву:\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    printf("Введіть число, яке потрібно знайти: ");
    scanf("%d", &x);
    int result = find_element(arr, n, x);
    if (result == -1) {
        printf("Елемент %d не знайдено в масиві.", x);
    } else {
        printf("Елемент %d знайдено в масиві під індексом %d.", x, result);
    }
    return 0;
}
